
<html><head><title>Lista Sede</title>
  <script>
    function cancella(id) {
        return fetch('/sede/'+id, {
            method: 'DELETE'
        });
    }    
        </script>
</head>
<body><h1> Lista Sedi definite</h1>
  <table>
      <tr><th>Nome</th><th>Citta</th><th>Indirizzo</th><th>Azioni</th></tr>
    <% for (var i = 0; i < lista.length; i++) { %>
       <tr><td><%= lista[i].nome %></td>
           <td><%= lista[i].citta %></td>
           <td><%=lista[i].indirizzo %></td>
           <td><input type='button' onclick='cancella("<%=lista[i].id %>")' value="Delete"/>
            <input type='button' onclick="window.location.href='/persona/<%= lista[i].id %>'" value="Edit"/></td></td>
          </tr>
    <% } %>
  </table>
  <hr/>
  <a href="/sede/crea">Clicca Qui per creare nuove Sedi...</a>
 

</body></html>